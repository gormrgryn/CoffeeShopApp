@model IEnumerable<CoffeeShopApp.Models.Product>

<div class="coffee-page">
    <div class="drinks-wrapper d-flex justify-content-between">
        @foreach (var product in Model)
        {
            <div class="drink" tabindex="0">
                <div class="drink-image">
                    <div class="d-flex justify-content-center">
                        <img src="~/img/@product.Image" />
                    </div>
                </div>
                <div class="justify-content-between drink-arrows">
                    <div class="arrow-left"></div>
                    <div class="arrow-right"></div>
                </div>
                <div class="drink-name">
                    <h3>@product.Name</h3>
                </div>
                <div class="drink-info">
                    <div class="drink-info-row-1 d-flex justify-content-between">
                        <p>Price</p>
                        <p>$@product.Price</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Calories</p>
                        <p>
                            <span>
                                @product.Calories
                            </span>
                            g
                        </p>
                    </div>
                </div>
                <div class="drink-add-to-cart">
                    <input type="submit" value="ADD TO BASKET" tabindex="-1" class="button"/>
                </div>
            </div>
        }
    </div>
</div>